{% extends "base.html.j2" %}
{% block title %}AbbottWu's Blog{% endblock %}
{% block main %}
<!--Main column-->
<div class="row">

  <!--Main column-->
  <div class="col-lg-8">
    {% if current_user.is_authenticated %}
      <h1>{{current_user.username}}</h1>
    {% else %}
      <h1>stranger</h1>
    {% endif %}
    <!--Post-->
    <div class="post-wrapper wow fadeIn" data-wow-delay="0.2s">
      <!--Post data-->
      <h1 class="h1-responsive">文章主标题<small class="text-muted">副标题</small></h1>
      <h5>作者<a href="">AbbottWu</a>, 30.04.2016</h5>

      <br>

      <!--Featured image -->
      <div class="view overlay hm-white-light z-depth-1-half">
        <!-- <img src="https://storage.googleapis.com/material-design/publish/material_v_11/assets/0Bx4BSt6jniD7Y1huOXVQdlFPMmM/materialdesign_introduction.png" class="img-fluid " alt=""> -->
        <a href="">
          <div class="mask">
          </div>
        </a>
      </div>

      <br>

      <!--Post excerpt-->
      <p>正在测试文章段落及设计框架</p>

      <!--"Read more" button-->
      <button class="btn btn-info">Read more</button>
    </div>
    <!--/.Post-->


    <hr>

    <!--分页按钮-->
    <nav>
      <ul class="pagination flex-center pg-dark  wow fadeIn" data-wow-delay="0.2s">
        <!--左箭头-->
        <li class="page-item">
          <a class="page-link" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
        </li>

        <!--数字-->
        <li class="page-item active"><a class="page-link">1</a></li>
        <li class="page-item"><a class="page-link">2</a></li>
        <li class="page-item"><a class="page-link">3</a></li>
        <li class="page-item"><a class="page-link">4</a></li>
        <li class="page-item"><a class="page-link">5</a></li>

        <!--右箭头-->
        <li class="page-item">
          <a class="page-link" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
        </li>
      </ul>
    </nav>
    <!--/.分页-->

  </div>

  <!--Sidebar-->
  <div class="col-lg-4">

    <div class="widget-wrapper wow fadeIn" data-wow-delay="0.4s">
      <h4>分类:</h4>
      <br>
      <div class="list-group">
        <a href="#" class="list-group-item active">生活节奏</a>
        <a href="#" class="list-group-item">音乐</a>
        <a href="#" class="list-group-item">旅行</a>
        <a href="#" class="list-group-item">时尚</a>
        <a href="#" class="list-group-item">聚会</a>
      </div>
    </div>



    <div class="widget-wrapper wow fadeIn" data-wow-delay="0.6s">
      <h4>订阅我们</h4>
      <br>
      <div class="card">
        <div class="card-block">
          <p><strong>给我们的新文章提建议</strong></p>
          <p>每周我们会发给你本周最重要的新闻</p>
          <div class="md-form">
            <i class="fa fa-user prefix"></i>
            <input type="text" id="form1" class="form-control">
            <label for="form1">你的名字</label>
          </div>
          <div class="md-form">
            <i class="fa fa-envelope prefix"></i>
            <input type="text" id="form2" class="form-control">
            <label for="form2">你的邮箱</label>
          </div>
          <button class="btn btn-info">提交</button>

        </div>
      </div>
    </div>

  </div>
  <!--/.Sidebar-->
</div>
{% endblock %}
