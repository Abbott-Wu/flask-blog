    {% for post in posts %}
    <!--Post-->
    <div class="post-wrapper wow fadeIn" data-wow-delay="0.2s">
      <!--Post data-->
      <h1 class="h1-responsive">{{ post.title }}<small class="text-muted">{{ post.second_title }}</small></h1>
      <h5>作者<a href="">{{ post.author.username }}</a>, {{ moment(post.timestamp).fromNow() }}</h5>

      <br>
      {% if post.img %}
      <!--Featured image -->
      <div class="view overlay hm-white-light z-depth-1-half">
        <img src="{{ post.img }}" class="img-responsive" alt="" width="750">
        <a href="{{ url_for('main.post', id=post.id) }}">
          <div class="mask">
          </div>
        </a>
      </div>

      <br>
      {% endif %}

      <!--Post excerpt-->
      <p>{{ post.first_look }}</p>

      <!--"Read more" button-->
      <a href="{{ url_for('main.post', id=post.id) }}" class="btn btn-info">Read more</a>
      {% if current_user == post.author %}
        <a href="{{ url_for('main.edit', id=post.id) }}" class="btn btn-warning">Edit post</a>
      {% elif current_user.is_administrator() %}
        <a href="{{ url_for('main.edit', id=post.id) }}" class="btn btn-danger">Edit post</a>
      {% endif %}
    </div>
    <br><hr>
    <!--/.Post-->
    {% endfor %}
