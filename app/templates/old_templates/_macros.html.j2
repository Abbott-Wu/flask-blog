{% macro pagination_widget(pagination, endpoint) %}
  <!-- <nav> -->
<ul class="pagination flex-center pg-dark  wow fadeIn" data-wow-delay="0.2s">
  <!--左箭头-->
  <li class="{% if not pagination.has_prev %} disabled {% endif %} page-item">
    <a href="{% if pagination.has_prev %}{{ url_for(endpoint,
        page = pagination.page - 1, **kwargs)}}{% else %}#{% endif %}"
        class="page-link" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
  </li>
  <!--左箭头-->
  <!--数字-->
  {% for p in pagination.iter_pages(left_edge=2,left_current=1,right_edge=2,right_current=2) %}
    {% if p %}
      {% if p == pagination.page %}
        <li class="page-item active">
          <a href="{{ url_for(endpoint, page = p, **kwargs) }}" class="page-link">{{ p }}</a>
        </li>
      {% else %}
        <li class="page-item">
          <a href="{{ url_for(endpoint, page = p, **kwargs) }}" class="page-link">{{ p }}</a>
        </li>
      {% endif %}
    {% else %}
    <li class="disabled"><a href="#">&hellip;</a></li>
    {% endif %}
  {% endfor %}

  <!--右箭头-->
  <li class="{% if not pagination.has_next %} disabled {% endif %} page-item">
    <a href="{% if pagination.has_next %}{{ url_for(endpoint,
        page = pagination.page + 1, **kwargs)}}{% else %}#{% endif %}"
        class="page-link" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
  </li>
  <!--右箭头-->

</ul>
<!-- </nav> -->
{% endmacro %}
